{
  "mode": "unified",
  "server": {
    "host": "0.0.0.0",
    "port": 8080,
    "read_timeout": 10,
    "max_connections": 1000
  },
  "stt": {
    "model_path": "models/asr/sherpa-onnx-sense-voice-zh-en-ja-ko-yue-2024-07-17/model.int8.onnx",
    "tokens_path": "models/asr/sherpa-onnx-sense-voice-zh-en-ja-ko-yue-2024-07-17/tokens.txt",
    "language": "zh",
    "provider": {
      "provider": "auto",
      "device_id": 0,
      "num_threads": 4,
      "pool_size": 5
    },
    "debug": false
  },
  "tts": {
    "model_path": "models/tts/piper-zh-cn/model.onnx",
    "voices_path": "models/tts/piper-zh-cn/voices.bin",
    "tokens_path": "models/tts/piper-zh-cn/tokens.txt",
    "data_dir": "models/tts/piper-zh-cn/espeak-ng-data",
    "provider": {
      "provider": "cpu",
      "device_id": 0,
      "num_threads": 2,
      "pool_size": 8
    },
    "debug": false
  },
  "audio": {
    "sample_rate": 16000,
    "feature_dim": 80,
    "chunk_size": 2048,
    "normalize_factor": 32768.0
  },
  "websocket": {
    "read_timeout": 10,
    "write_timeout": 10,
    "ping_interval": 54,
    "ping_timeout": 60,
    "max_message_size": 1048576,
    "read_buffer_size": 2048,
    "write_buffer_size": 2048,
    "enable_compression": false
  },
  "session": {
    "max_sessions": 1000,
    "session_timeout": 180,
    "send_queue_size": 200,
    "max_send_errors": 5
  },
  "rate_limit": {
    "enabled": true,
    "requests_per_second": 500,
    "burst_size": 1000,
    "max_connections": 1000
  },
  "vad": {
    "enabled": false,
    "provider": "silero",
    "pool_size": 200,
    "threshold": 0.5
  },
  "logging": {
    "level": "warn",
    "format": "json",
    "output": "file",
    "file_path": "logs/speech-fast.log",
    "max_size": 50,
    "max_backups": 3,
    "max_age": 7,
    "compress": true
  }
}

