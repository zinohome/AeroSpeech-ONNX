{
  "mode": "unified",
  "server": {
    "host": "0.0.0.0",
    "port": 8080,
    "read_timeout": 30,
    "max_connections": 200
  },
  "stt": {
    "model_path": "models/asr/sherpa-onnx-sense-voice-zh-en-ja-ko-yue-2024-07-17/model.int8.onnx",
    "tokens_path": "models/asr/sherpa-onnx-sense-voice-zh-en-ja-ko-yue-2024-07-17/tokens.txt",
    "language": "zh",
    "provider": {
      "provider": "auto",
      "device_id": 0,
      "num_threads": 4,
      "pool_size": 5
    },
    "debug": false
  },
  "tts": {
    "model_path": "models/tts/vits-zh-hf-models/model.onnx",
    "voices_path": "models/tts/vits-zh-hf-models/voices.bin",
    "tokens_path": "models/tts/vits-zh-hf-models/tokens.txt",
    "data_dir": "models/tts/vits-zh-hf-models/espeak-ng-data",
    "lexicon_en": "models/tts/vits-zh-hf-models/lexicon-us-en.txt",
    "lexicon_zh": "models/tts/vits-zh-hf-models/lexicon-zh.txt",
    "provider": {
      "provider": "cuda",
      "device_id": 0,
      "num_threads": 2,
      "pool_size": 3
    },
    "debug": false
  },
  "audio": {
    "sample_rate": 22050,
    "feature_dim": 80,
    "chunk_size": 4096,
    "normalize_factor": 32768.0
  },
  "websocket": {
    "read_timeout": 30,
    "write_timeout": 30,
    "ping_interval": 54,
    "ping_timeout": 60,
    "max_message_size": 4194304,
    "read_buffer_size": 4096,
    "write_buffer_size": 4096,
    "enable_compression": false
  },
  "session": {
    "max_sessions": 200,
    "session_timeout": 600,
    "send_queue_size": 1000,
    "max_send_errors": 10
  },
  "rate_limit": {
    "enabled": true,
    "requests_per_second": 100,
    "burst_size": 200,
    "max_connections": 200
  },
  "vad": {
    "enabled": false,
    "provider": "silero",
    "pool_size": 100,
    "threshold": 0.5
  },
  "logging": {
    "level": "debug",
    "format": "json",
    "output": "both",
    "file_path": "logs/speech-high-quality.log",
    "max_size": 100,
    "max_backups": 10,
    "max_age": 30,
    "compress": true
  }
}

