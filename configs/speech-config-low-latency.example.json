{
  "mode": "unified",
  "server": {
    "host": "0.0.0.0",
    "port": 8080,
    "read_timeout": 15
  },
  "stt": {
    "model_path": "models/asr/sherpa-onnx-paraformer-zh-small-2024-03-09/model.int8.onnx",
    "tokens_path": "models/asr/sherpa-onnx-paraformer-zh-small-2024-03-09/tokens.txt",
    "language": "zh",
    "provider": {
      "provider": "cpu",
      "num_threads": 4
    },
    "debug": false
  },
  "tts": {
    "model_path": "models/tts/kokoro-multi-lang-v1_1/model.onnx",
    "voices_path": "models/tts/kokoro-multi-lang-v1_1/voices.bin",
    "tokens_path": "models/tts/kokoro-multi-lang-v1_1/tokens.txt",
    "data_dir": "models/tts/kokoro-multi-lang-v1_1/espeak-ng-data",
    "provider": {
      "provider": "cpu",
      "num_threads": 4
    },
    "debug": false
  },
  "audio": {
    "sample_rate": 16000,
    "feature_dim": 80,
    "chunk_size": 1024,
    "normalize_factor": 32768.0
  },
  "websocket": {
    "read_timeout": 15,
    "max_message_size": 1048576,
    "read_buffer_size": 1024,
    "write_buffer_size": 1024,
    "enable_compression": false
  },
  "session": {
    "send_queue_size": 300,
    "max_send_errors": 10
  },
  "rate_limit": {
    "enabled": true,
    "requests_per_second": 500,
    "burst_size": 1000,
    "max_connections": 1000
  },
  "vad": {
    "enabled": true,
    "provider": "silero",
    "pool_size": 100,
    "threshold": 0.6
  },
  "logging": {
    "level": "warn",
    "format": "text",
    "output": "file",
    "file_path": "logs/speech.log",
    "max_size": 50,
    "max_backups": 5,
    "max_age": 7,
    "compress": false
  }
}

