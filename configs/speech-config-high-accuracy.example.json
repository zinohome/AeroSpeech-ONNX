{
  "mode": "unified",
  "server": {
    "host": "0.0.0.0",
    "port": 8080,
    "read_timeout": 30
  },
  "stt": {
    "model_path": "models/asr/sherpa-onnx-paraformer-zh-2023-09-14/model.int8.onnx",
    "tokens_path": "models/asr/sherpa-onnx-paraformer-zh-2023-09-14/tokens.txt",
    "language": "zh",
    "provider": {
      "provider": "cuda",
      "device_id": 0,
      "num_threads": 4
    },
    "debug": false
  },
  "tts": {
    "model_path": "models/tts/kokoro-multi-lang-v1_1/model.onnx",
    "voices_path": "models/tts/kokoro-multi-lang-v1_1/voices.bin",
    "tokens_path": "models/tts/kokoro-multi-lang-v1_1/tokens.txt",
    "data_dir": "models/tts/kokoro-multi-lang-v1_1/espeak-ng-data",
    "provider": {
      "provider": "cuda",
      "device_id": 0,
      "num_threads": 4
    },
    "debug": false
  },
  "audio": {
    "sample_rate": 16000,
    "feature_dim": 80,
    "chunk_size": 8192,
    "normalize_factor": 32768.0
