  "session": {
    "send_queue_size": 1000,
    "max_send_errors": 10
  },
  "rate_limit": {
    "enabled": true,
    "requests_per_second": 500,
    "burst_size": 1000,
    "max_connections": 1000
  },
  "vad": {
    "enabled": true,
    "provider": "silero",
    "pool_size": 200,
    "threshold": 0.4
  },
  "logging": {
    "level": "info",
    "format": "json",
    "output": "both",
    "file_path": "logs/speech.log",
    "max_size": 200,
    "max_backups": 20,
    "max_age": 90,
    "compress": true
  }
